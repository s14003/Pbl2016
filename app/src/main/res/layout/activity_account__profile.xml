<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Account.Account_Profile">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="アカウント設定を変更"
        android:id="@+id/testtext"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="名前"
        android:id="@+id/name"
        android:layout_below="@+id/testtext"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:textSize="30sp" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/lastname"
        android:layout_below="@+id/name"
        android:layout_toEndOf="@+id/name"
        android:hint="姓" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/firstname"
        android:layout_alignTop="@+id/lastname"
        android:layout_toEndOf="@+id/lastname"
        android:layout_marginLeft="10dp"
        android:hint="名" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="住所"
        android:id="@+id/textViewaddress"
        android:layout_below="@+id/lastname"
        android:layout_alignStart="@+id/name"
        android:layout_marginTop="20dp"
        android:textSize="30sp" />

    <EditText
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:id="@+id/profile_address"
        android:hint="住所"
        android:layout_below="@+id/textViewaddress"
        android:layout_alignStart="@id/lastname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="パスワード"
        android:id="@+id/textviewpass"
        android:layout_below="@+id/profile_address"
        android:layout_alignStart="@+id/textViewaddress"
        android:layout_marginTop="20dp"
        android:textSize="30sp" />

    <EditText
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pass_prof"
        android:layout_below="@+id/textviewpass"
        android:layout_alignStart="@+id/lastname"
        android:hint="Password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="パスワードの確認"
        android:id="@+id/textviewconf"
        android:layout_below="@+id/pass_prof"
        android:layout_alignStart="@+id/textviewpass"
        android:layout_marginTop="20dp"
        android:textSize="30dp" />

    <EditText
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passconf"
        android:layout_below="@+id/textviewconf"
        android:layout_alignStart="@+id/lastname"
        android:hint="Password" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/finish_button"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/passconf"
        android:layout_alignStart="@+id/textviewconf"
        android:text="戻る"
        android:textSize="20sp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="確認"
        android:id="@+id/update_button"
        android:layout_alignTop="@+id/finish_button"
        android:layout_toEndOf="@+id/finish_button"
        android:layout_marginLeft="50dp"
        android:textSize="20sp" />

</RelativeLayout>
